    </div>
  </div>

  <div class="right-header">
    <div class="room-delete-btn">
      <a href="###">チャットを終了する</a>
    </div>
  </div>
</div>

<div class="chat-message-index">
  <div class="sended-message">
    <div class="upper-message">
      <div class="user-name">
        MARINA
      </div>
      <div class="date">
        2024/09/06(Fri) 18:00:00
      </div>
    </div>
    <div class="lower-message">
      <div class="message">
        こんばんは
      </div>
    </div>
  </div>

  <div class="sended-message">
    <div class="upper-message">
      <div class="user-name">
        MARINA
      </div>
      <div class="date">
        2024/09/09(Mon) 22:30:00
      </div>
    </div>
    <div class="lower-message">
      <div class="message">
        おやすみ
      </div>
    </div>
  </div>
</div>

<%= form_with model: [@room, @message], html: {class: "new-message"}, local: true do |f|%>
  <div class="message-form">
    <%= f.text_field :content, class: 'form', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'send-btn' %>
<% end %>